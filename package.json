{
  "name": "market-app",
  "version": "1.0.0",
  "description": "Cloned facebook's Marketplace ",
  "main": "index.js",
  "scripts": {
    "server": "npm run dev --prefix backend",
    "client": "npm run dev --prefix market-frontend",
    "server:prod": "npm run start --prefix backend",
    "client:prod": "npm run start --prefix market-frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "concurrently \"npm run server:prod\" \"npm run client:prod\""
  },
